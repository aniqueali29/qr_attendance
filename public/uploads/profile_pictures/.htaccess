# Prevent direct PHP execution in uploads directory
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

# Prevent execution of any scripts
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Allow only image files
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>
